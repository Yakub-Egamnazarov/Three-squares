{
  "name": "coding-heroes",
  "version": "1.0.0",
  "description": "Website copy to practice the css coding ",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss styles/main.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss styles/main.comp.css",
    "concat:css": "concat -o styles/main.concat.css styles/fonts.css styles/main.comp.css styles/font-awesome/css/all.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' styles/main.concat.css -o styles/main.prefix.css",
    "compress:css": "node-sass styles/main.prefix.css styles/main.style.css --output-style compressed", 
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Yakub",
  "license": "ISC",
  "dependencies": {
    "live-server": "^1.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "concat": "^1.0.3",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1"
  }
}
